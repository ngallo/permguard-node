{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "permguard-node": ["node_modules/permguard-node"]
    },
    "target": "es2017",
    "module": "commonjs",
    "rootDir": ".",
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": false,
    "removeComments": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true
  }
}
